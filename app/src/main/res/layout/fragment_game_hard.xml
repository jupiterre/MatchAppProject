<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Chronometer
        android:id="@+id/chronometer_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        style="@style/Divider"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chronometer_timer" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:columnCount="5"
                android:orientation="horizontal"
                android:rowCount="7"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0">

                <!-- with x = row numer y = column number
                    button ids are "buttonxy" -->
                <ImageButton
                    android:id="@+id/button00"
                    android:layout_width="75dp"
                    android:layout_height="80dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/ic_card" />

                <ImageButton
                    android:id="@+id/button01"
                    android:layout_width="75dp"
                    android:layout_height="80dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/ic_card" />

                <ImageButton
                    android:id="@+id/button02"
                    android:layout_width="75dp"
                    android:layout_height="80dp"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/ic_card" />

                <ImageButton
                    android:id="@+id/button03"
                    android:layout_width="75dp"
                    android:layout_height="80dp"
                    android:layout_row="0"
                    android:layout_column="3"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/ic_card" />

                <ImageButton
                    android:id="@+id/button04"
                    android:layout_width="75dp"
                    android:layout_height="80dp"
                    android:layout_row="0"
                    android:layout_column="4"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/ic_card" />


                <ImageButton
                    android:id="@+id/button10"
                    android:layout_width="75dp"
                    android:layout_height="80dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/ic_card" />

                <ImageButton
                    android:id="@+id/button11"
                    android:layout_width="75dp"
                    android:layout_height="80dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/ic_card" />

                <ImageButton
                    android:id="@+id/button12"
                    android:layout_width="75dp"
                    android:layout_height="80dp"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/ic_card" />

                <ImageButton
                    android:id="@+id/button13"
                    android:layout_width="75dp"
                    android:layout_height="80dp"
                    android:layout_row="1"
                    android:layout_column="3"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/ic_card" />

                <ImageButton
                    android:id="@+id/button14"
                    android:layout_width="75dp"
                    android:layout_height="80dp"
                    android:layout_row="1"
                    android:layout_column="4"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/ic_card" />


                <ImageButton
                    android:id="@+id/button20"
                    android:layout_width="75dp"
                    android:layout_height="80dp"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/ic_card" />

                <ImageButton
                    android:id="@+id/button21"
                    android:layout_width="75dp"
                    android:layout_height="80dp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/ic_card" />

                <ImageButton
                    android:id="@+id/button22"
                    android:layout_width="75dp"
                    android:layout_height="80dp"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/ic_card" />

                <ImageButton
                    android:id="@+id/button23"
                    android:layout_width="75dp"
                    android:layout_height="80dp"
                    android:layout_row="2"
                    android:layout_column="3"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/ic_card" />

                <ImageButton
                    android:id="@+id/button24"
                    android:layout_width="75dp"
                    android:layout_height="80dp"
                    android:layout_row="2"
                    android:layout_column="4"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/ic_card" />


                <ImageButton
                    android:id="@+id/button30"
                    android:layout_width="75dp"
                    android:layout_height="80dp"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/ic_card" />

                <ImageButton
                    android:id="@+id/button31"
                    android:layout_width="75dp"
                    android:layout_height="80dp"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/ic_card" />

                <!-- row 3 column 2 needs to be blank so there's an even number of buttons -->

                <ImageView
                    android:id="@+id/imageView_matchLogo"
                    android:layout_width="75dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/match_logo" />

                <ImageButton
                    android:id="@+id/button33"
                    android:layout_width="75dp"
                    android:layout_height="80dp"
                    android:layout_row="3"
                    android:layout_column="3"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/ic_card" />

                <ImageButton
                    android:id="@+id/button34"
                    android:layout_width="75dp"
                    android:layout_height="80dp"
                    android:layout_row="3"
                    android:layout_column="4"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/ic_card" />


                <ImageButton
                    android:id="@+id/button40"
                    android:layout_width="75dp"
                    android:layout_height="80dp"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/ic_card" />

                <ImageButton
                    android:id="@+id/button41"
